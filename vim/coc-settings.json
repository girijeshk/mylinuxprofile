{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["cc", "cxx", "hxx", "C", "H", "hh","h", "c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json", ".git"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
